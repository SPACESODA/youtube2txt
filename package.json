{
  "name": "youtube2txt",
  "version": "1.2.3",
  "description": "Local server for fetching YouTube transcripts",
  "author": "SPACESODA",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "doctor": "node scripts/doctor.js",
    "quickstart": "node scripts/quickstart.js",
    "electron": "electron electron/main.js",
    "dist": "electron-builder && node scripts/cleanup-dist.js"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "electron-updater": "^6.2.1"
  },
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^24.13.3"
  },
  "volta": {
    "node": "20"
  },
  "build": {
    "appId": "com.spacesoda.youtube2txt",
    "productName": "youtube2txt",
    "icon": "public/assets/android-chrome-512x512.png",
    "files": [
      "server.js",
      "public/**",
      "electron/**",
      "package.json",
      "LICENSE"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ],
      "compression": "maximum",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "SPACESODA",
        "repo": "youtube2txt"
      }
    ]
  }
}
