{
  "name": "youtube2txt",
  "version": "1.4.0",
  "description": "Local server for fetching YouTube transcripts",
  "author": "SPACESODA",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "doctor": "node scripts/doctor.js",
    "quickstart": "node scripts/quickstart.js",
    "test": "node --test",
    "electron": "node scripts/run-electron.js",
    "dist": "electron-builder && echo \"Build finished\" && node scripts/cleanup-dist.js",
    "dist:mac-arm64": "electron-builder --mac dmg --arm64 --publish never && node scripts/cleanup-dist.js",
    "dist:mac-x64": "electron-builder --mac dmg --x64 --publish never && node scripts/cleanup-dist.js",
    "dist:mac-update-arm64": "electron-builder --mac zip --arm64 --publish never",
    "dist:mac-update-x64": "electron-builder --mac zip --x64 --publish never",
    "dist:mac-update-arm64-fast": "electron-builder --mac zip --arm64 --publish never -c.compression=store",
    "dist:mac-update-x64-fast": "electron-builder --mac zip --x64 --publish never -c.compression=store"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "electron-updater": "^6.2.1"
  },
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^24.13.3"
  },
  "volta": {
    "node": "20"
  },
  "build": {
    "appId": "com.spacesoda.youtube2txt",
    "productName": "youtube2txt",
    "icon": "public/assets/android-chrome-512x512.png",
    "files": [
      "server.js",
      "public/**",
      "electron/**",
      "package.json",
      "LICENSE"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "compression": "maximum",
      "category": "public.app-category.productivity",
      "artifactName": "youtube2txt-v${version}-mac-${arch}.${ext}"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "youtube2txt-v${version}.${ext}"
    },
    "nsis": {
      "artifactName": "youtube2txt-v${version}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "artifactName": "youtube2txt-v${version}.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "SPACESODA",
        "repo": "youtube2txt"
      }
    ]
  }
}
